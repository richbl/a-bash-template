# -----------------------------------------------------------------------------
# check program dependencies
#
function check_program_dependencies {

  local -a DEPS=("${!1}")

  for i in "${DEPS[@]}"; do
    if ! type $i &>/dev/null; then
      echo
      echo "Error: program $i not installed."
      quit
    fi
  done

}

# -----------------------------------------------------------------------------
# check file dependencies
#
function check_file_dependencies {

  local -a DEPS=("${!1}")
  for i in "${DEPS[@]}"; do
    if [ ! -f $i &>/dev/null ]; then
      echo
      echo "Error: file $i not found."
      quit
    fi
  done

}

# -----------------------------------------------------------------------------
# display script banner
#
function display_banner {

  echo
  echo " |"
  echo " |" $(get_config_details title)
  echo " |  " $(get_config_details version)
  echo " |"
  echo " | Usage:"
  echo " |  " $(get_config_details syntax)
  echo " |"

  local COUNT_ARGS=$(get_config_args_length)
  for ((j=0;j<COUNT_ARGS;j++)) do
    echo -e ' |  ' $(get_config_arg $j short_form)',' $(get_config_arg $j long_form)' \t'$(get_config_arg $j description)
  done

  echo " |"
  echo

}

# -----------------------------------------------------------------------------
# exit wrapper
#
function quit {

  echo
  exit 1

}
